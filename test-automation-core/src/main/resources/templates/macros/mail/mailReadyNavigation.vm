#macro(includeMailReadyNavigation $active_tab $absolutePrefix)
<nav class="navbar navbar-default navbar-fixed-top" id="navigation">
  <div class="container-fluid">
    <div class="collapse navbar-collapse">
      <a href="../../../" class="navbar-text navbar-left">Cucumber Report</a>
      <ul class="nav navbar-nav navbar-right">
        #if ($run_with_jenkins)
          <li role="presentation"><a href="../">Jenkins</a></li>
          #if ($build_previous_number)
            <li role="presentation"><a href="../../$build_previous_number/cucumber-html-reports/$report_file">Previous results</a></li>
          #end
          <li role="presentation"><a href="../../lastCompletedBuild/cucumber-html-reports/$report_file">Latest results</a></li>
        #end
        <li role="presentation" #if($active_tab == "features") class="active" #end><a href="#resolveUrl($absolutePrefix, "overview-features.html")">Features</a></li>
        <li role="presentation" #if($active_tab == "tags")     class="active" #end><a href="#resolveUrl($absolutePrefix, "overview-tags.html")">Tags</a></li>
        <li role="presentation" #if($active_tab == "steps")    class="active" #end><a href="#resolveUrl($absolutePrefix, "overview-steps.html")">Steps</a></li>
        #if ($trends_present)
          <li role="presentation" #if($active_tab == "trends")  class="active" #end><a href="#resolveUrl($absolutePrefix, "overview-trends.html")">Trends</a></li>
        #end
        <li role="presentation" #if($active_tab == "failures") class="active" #end><a href="#resolveUrl($absolutePrefix, "overview-failures.html")">Failures</a></li>
      </ul>
    </div>
  </div>
</nav>
#end
